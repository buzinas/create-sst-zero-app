{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["react", "typescript", "import", "unicorn"],
  "env": {
    "browser": true,
    "es2024": true
  },
  "categories": {
    "correctness": "error",
    "perf": "error"
  },
  "settings": {
    "react": {
      "version": "19.2.0"
    }
  },
  "ignorePatterns": ["node_modules", "build", "dist", ".sst", ".react-router"]
}
